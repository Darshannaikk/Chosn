# Chosn Platform Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application URL
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# GitHub OAuth (Create app at https://github.com/settings/applications/new)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Stripe Configuration (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_or_live_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_or_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration (Resend - https://resend.com/api-keys)
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=noreply@your-domain.com

# Optional: Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Optional: Error Tracking
SENTRY_DSN=your-sentry-dsn

# Development Only
NODE_ENV=development 